{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block MonTitre %}Connexion{% endblock %}
{% block body %}
{% if error %}
<div class="alert alert-danger"> 
    {{error.messageKey | trans(error.messagedata, 'security')}}
</div>
{% endif %}
<form action="{{path('login')}}" method="post">
    <div class="form-group">
        <label >mail: </label>
        <input type="text" required name="_username" class="form-control", value={{lastname}}>
    </div>
    <div class="form-group">
        <label >Password: </label>
        <input type="password" required name="_password" class="form-control">
    </div>
    <input type="submit" class="btn btn-success" value="s'identifier">
</form>
{% endblock %}
